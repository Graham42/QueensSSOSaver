{
  "name": "Queen's SSO Saver",
  "version": "0.3.0",
  "manifest_version": 2,

  "applications": {
    "gecko": {
      "id": "Queens-SSO-Saver@qhack.ca"
    }
  },
  "description": "Improve easy of use of Queen's SSO",
  "homepage_url": "https://github.com/Graham42/QueensSSOSaver",
  "icons": {
      "128": "icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://login.queensu.ca/*",
        "https://sts.queensu.ca/*"
      ],
      "js": [
        "md5.min.js",
        "sjcl.js",
        "login.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://moodle.queensu.ca/*"
      ],
      "js": [
        "redirect.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage"
  ]
}
